<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/run_item">

    <TextView
        android:id="@+id/distance_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="4.14 km"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/time_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="00.30.29"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/average_speed_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="16.56 km/h"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:id="@+id/max_speed_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="24.78 km/h"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:id="@+id/date_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="25.09.2019"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>